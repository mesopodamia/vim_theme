syntax on
set nu!
set relativenumber
set ruler
set showcmd
set cursorline
set autoindent
set smartindent
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab
set textwidth=0
set wrapmargin=2
set showmatch
set scrolloff=5
set laststatus=2
set incsearch
set hlsearch
set paste
set history=1000
set statusline=%F%m%r%h%w\ [FORMAT=%{&ff}]\ [TYPE=%Y]\ [POS=%l,%v][%p%%]\ %{strftime(\"%d/%m/%y\ -\ %H:%M\")}


